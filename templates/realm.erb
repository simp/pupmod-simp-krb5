<%
  _defvars = [
    'admin_server',
    'kdc',
    'default_domain',
    'v4_realm',
    'auth_to_local'
  ]
-%>
[realms]
  <%= @name.upcase %> = {
<% _defvars.each do |key|
  val = eval("@#{key}")
  unless val.nil? || val.empty?
-%>
    <%= key %> = <%= val %>
<%  end -%>
<% end -%>
<% unless @v4_instance_convert.empty? -%>
    v4_instance_convert = {
<%  @v4_instance_convert.each_pair do |key, val| -%>
      <%= key %> = <%= val %>
<%  end -%>
    }
<% end -%>
<% unless @auth_to_local_names.empty? -%>
    auth_to_local_names = {
<%  @auth_to_local_names.each_pair do |key, val| -%>
      <%= key %> = <%= val %>
<%  end -%>
    }
<% end -%>
  }
